@model FishingTrip
@{
    
}


<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5"> Edit Catch</h2>
        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">TripID</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="TripID">
                    <span asp-validation-for="TripID" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">BoatID</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="BoatID">
                    <span asp-validation-for="BoatID" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Destination</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Destination">
                    <span asp-validation-for="Destination" class="text-danger"></span>
                </div>

                               <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Status</label>
                <div class="col-sm-8 mt-3">
                    <select class="form-select" asp-for="Status">
                        <option value="Completed">Completed</option>
                        <option value="Planned">Planned</option>
                    </select>
                </div>
            </div>
            </div>
            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="FishingTrip" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>

            </div>

        </form>
    </div>
</div>
